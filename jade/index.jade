doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width')
    title
    link(href='css/ionic.app.css', rel='stylesheet')
    link(href='css/style.css', rel='stylesheet')
    script(src='lib/ionic/js/ionic.bundle.js')
    script(src='lib/moment/min/moment.min.js')
    script(src='cordova.js')
    script(src='js/app.js')
    script(src='js/main_ctrl.js')
  body(ng-app='kj-timer')
    ion-pane
      ion-header-bar.bar-positive
        h1.title.ion-ios7-timer-outline &nbsp Timer
      ion-content.content(ng-controller='MainCtrl')
        h1.duration.padding(ng-show='count', ng-model='display') Minutes: {{display}}
        .list
          label.item.item-input
            span.input-label.padding Duration in Seconds
            input.input-box(type='number', min='0', placeholder='500', ng-model='count')
        .row
          button.button.button-full.button-assertive.ion-checkmark-circled.col(ng-click='start()') &nbsp Start
          button.button.button-full.button-dark.ion-close-circled.col(ng-click='stop()') &nbsp Stop
      .bar.bar-footer.bar-positive
        h2.title.footer.ion-ios7-circle-outline &nbsp Time is a flat circle.
